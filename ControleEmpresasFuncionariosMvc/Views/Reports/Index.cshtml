

<div class="text-center">
    @{
        ViewData["Title"] = "RELATÓRIOS";
    }

    <h1>@ViewData["Title"]</h1>

    <hr class="custom-hr" />
    <div class="alert alert-dismissible alert-primary  width-style2">
        <div class="d-flex align-items-center" style="margin-left: 10%; width: 100%;">
            <a type="button" class="btn btn-outline-primary"
               asp-action="ReportWorkersJobsCompanies">
