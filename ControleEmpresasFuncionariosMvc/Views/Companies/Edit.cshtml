@using ControleEmpresasFuncionariosMvc.Dtos
@model ControleEmpresasFuncionariosMvc.Models.ViewModels.ResponseViewModel<CompanyDto>

@{
    ViewData["Title"] = "Editar EMPRESA";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-10">
        <form action="Edit" method="post">

            <input type="hidden" name="Id" value="@this.Model.Content?.Id" />

            @if (string.IsNullOrEmpty(this.Model.Message) == false)
            {
                <div class="text-danger">@(this.Model.Message)</div>
            }
            <div class="form-group">
                <label id="Name">Se necessário, corrija o nome.</label>
                <input type="text" name="Name" class="control-label input-large" value="@this.Model.Content?.Name" />
            </div>


            <div class="form-group">
                <label id="Cnpj">Se desejado, insira o novo CNPJ (00.000.000/0000-00)</label>
                <input type="text" name="Cnpj" class="control-label input-short" value="@this.Model.Content?.Cnpj" />
            </div>


            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <hr />
    <a asp-action="Index">Voltar à lista de empresas</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}