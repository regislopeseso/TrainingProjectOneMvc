@using ControleEmpresasFuncionariosMvc.Dtos
@model ControleEmpresasFuncionariosMvc.Models.ViewModels.ResponseViewModel<CompanyDto>

@{
    ViewData["Title"] = "Apagar EMPRESA";
}

<h1>@ViewData["Title"]</h1>

<h3>
    Tem certeza que deseja apagar a empresa:
    <strong>@this.Model.Content?.Name  ( Cnpj: @this.Model.Content?.Cnpj )</strong>?
</h3>

<form asp-action="Delete">
    <input type="hidden" value="@this.Model.Content?.Id" />
    <input type="submit" value="Confirmar APAGAR" class="btn btn-outline-danger" />
</form>

<div>
    <hr />
    <a asp-action="Index">Voltar à lista de empresas</a>
</div>



